{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Runtime_Setup_Part_1",
            "type": "shell",
            "command": "${command:python.interpreterPath} ${workspaceFolder}/QUBProject40099112/bulbControl/manage.py makemigrations bulbControlFrontend",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Runtime_Setup_Part_2",
            "type": "shell",
            "command": "${command:python.interpreterPath} ${workspaceFolder}/QUBProject40099112/bulbControl/manage.py migrate",
            "dependsOn": "Runtime_Setup_Part_1",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "install_requirements",
            "type": "shell",
            "windows": {
                "command": "FOR /F %k in (${workspaceFolder}/QUBProject40099112/bulbControl/requirements.txt) DO pip install %k"
            },
            "linux": {
                "command": "cat ${workspaceFolder}/QUBProject40099112/bulbControl/requirements.txt | sed -e '/^\\s*#.*$/d' -e '/^\\s*$/d' | xargs -n 1 pip install"
            }
        }
    ]
}
