    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File (Java)",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Main",
            "request": "launch",
            "mainClass": "Main",
            "projectName": "BulbProject"
        },
        {
            "type": "java",
            "name": "copyPasta",
            "request": "launch",
            "mainClass": "copyPasta",
            "projectName": "BulbProject"
        },
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "windows": {
                "python": "${workspaceFolder}/env/Scripts/python.exe",
            },
            "linux": {
                "python": "${workspaceFolder}/env/bin/python3",
            },
            "program": "${workspaceRoot}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": ".*(http?:\\/\\/\\S+:[0-9]+\\/?).*",
                "uriFormat": "%s",
                "action": "openExternally",
            },
            "preLaunchTask": "Runtime_Setup_Part_2",
        },
        {
            "name": "Current File (Python)",
            "type": "debugpy",
            "request": "launch",
            "windows": {
                "python": "${workspaceFolder}/env/Scripts/python.exe",
            },
            "linux": {
                "python": "${workspaceFolder}/env/bin/python3",
            },
            "program": "${file}",
            "console": "integratedTerminal",
            "preLaunchTask": "install_requirements",
        }
    ]
}
