{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "singleAttributePerLine": true,
    "overrides": [
        {
            "files": "**/templates/*html",
            "options": {
                "printWidth": 200,
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": "*.js",
            "options": {
                "semi": true
            }
        }
    ]
}
